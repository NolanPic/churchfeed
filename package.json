{
  "name": "churchfeed",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup:local": "npm run setup:certs && npm run setup:dns && npm run setup:caddy",
    "setup:certs": "node scripts/setup-certs.js",
    "setup:dns": "node scripts/setup-dns.js",
    "setup:caddy": "node scripts/setup-caddy.js",
    "dev": "caddy start --config Caddyfile && npm run dev:nextjs",
    "dev:stop": "caddy stop",
    "dev:nextjs": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "seed": "node scripts/seed/seed.js",
    "seed:clear": "node scripts/seed/seed.js clear",
    "test": "vitest"
  },
  "dependencies": {
    "@auth/core": "^0.37.0",
    "@clerk/nextjs": "^6.25.4",
    "@types/dompurify": "^3.0.5",
    "classnames": "^2.5.1",
    "convex": "^1.23.0",
    "dompurify": "^3.2.6",
    "motion": "^12.18.1",
    "ms": "^2.1.3",
    "next": "15.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^3.0.0",
    "@eslint/eslintrc": "^3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/ms": "^2.1.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.6.0",
    "dotenv": "^16.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "jsdom": "^26.1.0",
    "postcss-custom-media": "^11.0.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^10.2.3",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
